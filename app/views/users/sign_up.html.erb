<h1>Sign Up</h1>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>    
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <div>
    <%= f.label :email, "Email"%>
    <%= f.email_field :email%>
  </div>
  <div>
    <%= f.label :password, "密碼"%>
    <%= f.password_field :password%>
  </div>
  <div>
    <%= f.label :password_confirmation, "確認密碼"%>
    <%= f.password_field :password_confirmation%>
  </div>
  <%= f.submit "註冊"%>    
<% end %>
  
